{
  "$schema": "https://stryker-mutator.io/stryker-schema.json",
  "solution": "../DrivhusApplikation.sln",
  "mutate": [
    "../Api.Rest/**/*.cs",
    "../Api.Websocket/**/*.cs",
    "../Application/Services/**/*.cs",
    "../Infrastructure.MQTT/**/*.cs",
    "../Infrastructure.Postgres/**/*.cs",
    "../Infrastructure.Websocket/**/*.cs",

    "!../Core.Domain/**/*.cs",
    "!../Infrastructure.Postgres.Scaffolding/**",
    "!../Startup/**"
  ],
  "coverage-analysis": "perTest",
  "thresholds": {"break": 80},
  "concurrency": "auto"
}